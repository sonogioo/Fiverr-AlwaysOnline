{
  "manifest_version": 3,
  "name": "Fiverr Keep-Alive ULTRA-PRO",
  "version": "8.0.0",
  "description": "Sistema ULTRA-AVANZATO con Alarms API, Multi-Tab Redundancy, Visibility Bypass, Page Lifecycle Protection, Cookie Monitoring e Network Keep-Alive per presenza online GARANTITA 24/7",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.fiverr.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.fiverr.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
